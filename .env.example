# Server
PORT=3000

# MongoDB
# Local MongoDB (works with MongoDB Compass + MongoDB Community Server)
# - Start the MongoDB service
# - In MongoDB Compass connect to: mongodb://127.0.0.1:27017
# - Your app DB name is the path segment below (dsa-tracker)
MONGO_URI=mongodb://127.0.0.1:27017/dsa-tracker

# Optional: when true, the server will refuse to start without Mongo connected.
REQUIRE_MONGO=false

# Optional: reduce the wait time when Mongo isn't reachable (ms)
MONGO_SERVER_SELECTION_TIMEOUT_MS=5000

# Atlas example (also works in Compass):
# MONGO_URI=mongodb+srv://<username>:<password>@<cluster-host>/dsa-tracker?retryWrites=true&w=majority

# Auth
# Use a long random string in production.
JWT_SECRET=change_me_to_a_long_random_secret

# LeetCode
LEETCODE_USERNAME=your_leetcode_username

# Optional LeetCode API tuning
LEETCODE_TIMEOUT_MS=12000
LEETCODE_CACHE_TTL_MS=60000
LEETCODE_CACHE_MAX_ENTRIES=250

# Optional: cache for LeetCode problems index (/api/problems/all/)
LEETCODE_ALL_PROBLEMS_TTL_MS=21600000

# Optional: request headers (can help when LeetCode blocks non-browser requests)
LEETCODE_USER_AGENT=
LEETCODE_ACCEPT_LANGUAGE=en-US,en;q=0.9

# AI quiz generation (Recently Solved -> Quiz)
# Choose provider: openai | gemini
AI_PROVIDER=openai

# --- OpenAI ---
# Required when AI_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT_MS=20000

# --- Gemini (Google AI Studio) ---
# Required when AI_PROVIDER=gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_TIMEOUT_MS=20000
